<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/chat_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:src="@drawable/ic_sebastien"
        android:visibility="invisible" />

    <ImageButton
        android:id="@+id/compound_prev"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:src="@drawable/ic_arrow_back_black_24px"
        android:visibility="invisible" />

    <ScrollView
        android:id="@+id/inner_scroll"
        android:layout_width="@dimen/balloon_width"
        android:layout_height="@dimen/balloon_height"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@+id/chat_icon"
        android:background="@drawable/ai_balloon">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <jp.co.atware.trial_app.balloon.RecycleImageView
                android:id="@+id/compound_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxHeight="120dp"
                android:adjustViewBounds="true"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="12dp"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/compound_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="12dp"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/compound_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:textSize="12sp" />

            <LinearLayout
                android:id="@+id/compound_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="12dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="12dp" />

        </LinearLayout>

    </ScrollView>

    <ImageButton
        android:id="@+id/compound_next"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp"
        android:src="@drawable/ic_arrow_forward_black_24px"
        android:visibility="invisible" />

</RelativeLayout>



